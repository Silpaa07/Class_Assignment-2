//Write a C program to find average of array elements.
#include<stdio.h>
int main()
{
    int n;
    float sum=0.0,avg=0.0;
    printf("Enter the number of array elements:\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the array elements:\n");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    for(int i=0;i<n;i++)
    {
        sum=sum+arr[i];
        avg=sum/n;
    }
    printf("The average of array elements:%f\n",avg);
}
